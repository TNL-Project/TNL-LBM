DOXYFILE_ENCODING      = UTF-8
PROJECT_NAME           = "TNL-LBM"
PROJECT_NUMBER         = $(PROJECT_NUMBER)
PROJECT_BRIEF          = "Users' Guide for the Lattice Boltzmann module built on TNL"
OUTPUT_DIRECTORY       = $(OUTPUT_DIRECTORY)
CREATE_SUBDIRS         = NO
OUTPUT_LANGUAGE        = English
USE_MDFILE_AS_MAINPAGE = UsersGuide/users-guide.md
MARKDOWN_SUPPORT       = YES
AUTOLINK_SUPPORT       = YES
INLINE_SIMPLE_STRUCTS  = NO

INPUT                  = @TNL_LBM_DOXYGEN_INPUT_DIR@
FILE_PATTERNS          = *.md \
                         *.cu \
                         *.cpp \
                         *.cuh \
                         *.hpp \
                         *.h
RECURSIVE              = YES
EXCLUDE_PATTERNS       = */CMakeFiles/*
EXCLUDE_SYMLINKS       = NO

EXAMPLE_PATH          += $(OUTPUT_SNIPPETS_PATH)
INCLUDE_PATH          += $(OUTPUT_SNIPPETS_PATH)

STRIP_FROM_PATH        = @CMAKE_SOURCE_DIR@
FULL_PATH_NAMES        = YES

EXTRACT_ALL            = NO
EXTRACT_PRIVATE        = NO
EXTRACT_STATIC         = NO
EXTRACT_PACKAGE        = NO
EXTRACT_LOCAL_CLASSES  = NO
HIDE_UNDOC_MEMBERS     = NO
HIDE_UNDOC_CLASSES     = NO

GENERATE_HTML          = YES
HTML_TIMESTAMP         = NO
GENERATE_TREEVIEW      = YES
DISABLE_INDEX          = NO
GENERATE_LATEX         = NO
GENERATE_MAN           = NO
GENERATE_RTF           = NO
GENERATE_XML           = NO
GENERATE_DOCSET        = NO
GENERATE_AUTOGEN_DEF   = NO
GENERATE_PERLMOD       = NO

WARNINGS               = YES
WARN_IF_UNDOCUMENTED   = NO
WARN_AS_ERROR          = NO
QUIET                  = NO

EXTENSION_MAPPING      = md=markdown
TAB_SIZE               = 4

ALIASES               += "note=\par Note:\n"
ALIASES               += "warning=\par Warning:\n"

SOURCE_BROWSER         = NO
INLINE_SOURCES         = NO
VERBATIM_HEADERS       = YES

SEARCH_INCLUDES        = YES
INCLUDE_FILE_PATTERNS  = *.md

CLANG_ASSISTED_PARSING = $(CLANG_ASSISTED_PARSING)
CLANG_OPTIONS          = $(CLANG_OPTIONS)

PREDEFINED            += DOXYGEN_DOCUMENTATION=1

